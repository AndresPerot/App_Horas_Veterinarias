<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatePetActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8pt"
            android:paddingRight="8pt">

            <TextView
                android:id="@+id/activity_datepet_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder: Namepet"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_datepet_tv_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="raza"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_datepet_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fecha"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_datepet_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="telefono"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>